{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Facility Feature Schema",
  "type": "object",
  "properties": {
    "id": {"type": "string"},
    "type": {"type": "string", "enum": ["footprint","wall","door","window","room","roof","annotation"]},
    "geometry": {"type": "object"},
    "floor": {"type": "integer"},
    "height_m": {"type": "number"},
    "material": {"type": "string"},
    "source": {"type": "string"},
    "source_record_id": {"type": "string"},
    "confidence": {"type": "number", "minimum": 0, "maximum": 1}
  },
  "required": ["id","type","geometry","source"]
}
